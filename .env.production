# InstaRepay Production Environment Configuration
# IMPORTANT: Never commit this file to version control

# Database Configuration
DATABASE_URL="postgresql://username:password@prod-db-host:5432/instarepay_prod"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret-key-here-must-be-secure"
JWT_EXPIRES_IN="24h"

# Stripe Configuration (Live Keys)
STRIPE_SECRET_KEY="sk_live_your_stripe_live_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_live_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_live_webhook_secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-production-app-password"
SMTP_FROM="noreply@instarepay.com"

# AWS S3 Configuration
AWS_S3_BUCKET="instarepay-prod-bucket"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-production-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-production-aws-secret-key"

# Application Configuration
NODE_ENV="production"
PORT="3001"
FRONTEND_URL="https://app.instarepay.com"
BACKEND_URL="https://api.instarepay.com"

# Redis Configuration
REDIS_URL="redis://prod-redis-host:6379"

# MinIO Configuration (Production S3)
MINIO_ENDPOINT="s3.amazonaws.com"
MINIO_PORT="443"
MINIO_ACCESS_KEY="${AWS_ACCESS_KEY_ID}"
MINIO_SECRET_KEY="${AWS_SECRET_ACCESS_KEY}"
MINIO_USE_SSL="true"

# Security
BCRYPT_ROUNDS="12"
CORS_ORIGIN="https://app.instarepay.com"

# Logging
LOG_LEVEL="info"

# Session Configuration
SESSION_SECRET="your-production-session-secret-must-be-secure"
SESSION_MAX_AGE="86400000"  # 24 hours

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
DATADOG_API_KEY="your-datadog-api-key"
